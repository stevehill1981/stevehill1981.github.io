<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Code Like It's 198x</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">A series exploring programming techniques and technologies from the 1980s and how they relate to modern development.</p>
    </div>
    
    <div class="space-y-8">
        {%- for article in collections.code198x -%}
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <h2 class="text-2xl font-bold mb-2">
                <a href="{{ article.url }}" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">{{ article.data.title }}</a>
            </h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{{ article.date | readableDate }} | {{ article.data.system }}</p>
            <p class="text-gray-700 dark:text-gray-300 mb-4">{{ article.data.description }}</p>
            {%- if article.data.tags -%}
            <div class="flex flex-wrap gap-1.5 mb-4">
                {%- for tag in article.data.tags -%}
                <span class="px-2 py-0.5 text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md leading-tight">{{ tag }}</span>
                {%- endfor -%}
            </div>
            {%- endif -%}
            <div class="mt-4">
                <a href="{{ article.url }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-1.5 px-4 rounded-md transition-colors duration-300 text-sm leading-tight">Read More</a>
            </div>
        </article>
        {%- endfor -%}
    </div>
</div> 