---
layout: layouts/base.njk
---

<article class="max-w-3xl mx-auto px-4 py-8">
  <header class="mb-8">
    <h1 class="text-4xl font-bold mb-4 leading-tight">{{ title }}</h1>
    <div class="text-gray-600 text-sm mb-4">
      {% if tags %}
      <div class="mt-2">
        {% for tag in tags %}
        <a href="/tags/{{ tag | slug }}" class="inline-block px-3 py-1 mr-2 text-xs bg-gray-100 rounded-full hover:bg-gray-200 text-gray-700">{{ tag }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>

  {% if featuredImage %}
  <figure class="my-8">
    <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-auto rounded-lg" />
    {% if featuredImageCaption %}
    <figcaption class="text-center text-gray-600 text-sm mt-2">{{ featuredImageCaption }}</figcaption>
    {% endif %}
  </figure>
  {% endif %}

  <div class="prose prose-lg max-w-none">
    {{ content | safe }}
  </div>

  <footer class="mt-12 pt-8 border-t border-gray-200">
    {% if links %}
    <div class="mb-8">
      <h3 class="text-xl font-semibold mb-4">Project Links</h3>
      <div class="flex gap-4">
        {% for link in links %}
        <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-gray-100 rounded hover:bg-gray-200 text-gray-700">{{ link.text }}</a>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </footer>
</article> 